#!/bin/bash
set -e

git_init() {
  git clone --bare $GIT_URL .git
  git config --unset core.bare
}

polling_pull() {
  while true; do
    echo "Pulling latest..."
    git checkout -f || true
    git pull $GIT_URL $GIT_BRANCH || true
    sleep 10
  done
}

# When GIT_URL is set start polling in the background
[[ "$GIT_URL" ]] && git_init && polling_pull &

# Start NGINX in the foreground
nginx -g 'daemon off;'
